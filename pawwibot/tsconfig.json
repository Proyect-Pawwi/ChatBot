{
  "compilerOptions": {
    "target": "ES2020",              
    "module": "commonjs",              

    "declaration": false,
    "declarationMap": false,
    
    "moduleResolution": "node",
    
    "removeComments": true,
    
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    
    "allowSyntheticDefaultImports": true,
    
    "sourceMap": true,
    
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    
    "incremental": true,
    "skipLibCheck": true,
    
    "paths": {
      "~/*": ["./src/*"]
    },
    
    // Recomendación para evitar errores con módulos ESNext y node
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
